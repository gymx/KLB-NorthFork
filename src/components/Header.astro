---
import { Image } from "astro:assets";
import logo from "../assets/images/klblogo.png";
import Button from "../components/Button.astro";
import hamburger from "../assets/images/hamburger.svg";
import close from "../assets/images/close.svg";
---

<header class="header">
  <div class="nav-wrapper">
    <Image
      src={logo}
      alt="Logo"
      width={150}
      height={90}
    />
    <button
      class="mobile-nav-toggle"
      aria-controls="main-navigation"
    >
      <img
        class="hamburger"
        src={hamburger.src}
        alt=""
        aria-hidden="false"
      />
      <img
        class="close"
        src={close.src}
        alt=""
        aria-hidden="true"
      />
      <span class="visually-hidden">Menu</span>
    </button>
    <nav class="mainNav">
      <ul
        class="mainNav--items"
        aria-label="Main Navigation"
        id="main-nav"
      >
        <li><a href="#details">Event Details</a></li>
        <li><a href="#about">About</a></li>
        <li><a href="#contact">Contact</a></li>
        <li>
          <div style="display: none">
            <Button
              type="primary"
              ,
              btnText="Sign Up"
              ,
              href="#signup"
            />
          </div>
        </li>
      </ul>
    </nav>

    <style>
      .nav-wrapper {
        display: flex;
        justify-content: space-between;
      }

      .visually-hidden {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
      }
      .mainNav {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .mainNav--items {
        display: flex;
        gap: 1rem;
        list-style: none;
        align-items: baseline;
      }

      .mainNav--items a:hover {
        font-weight: 600;
      }

      .mobile-nav-toggle {
        display: none;
      }

      @media (max-width: 50em) {
        .mainNav {
          display: none;
        }
        .mobile-nav-toggle {
          display: block;
          border: none;
          background: none;
          cursor: pointer;
          padding: 0.3em;
        }

        .mobile-nav-toggle .close {
          display: none;
        }
      }
    </style>
  </div>
</header>
