---
import { Image } from "astro:assets";
import logo from "../assets/images/klblogo.png";
import Button from "../components/Button.astro";
---

<header class="header">
  <a class="logo" href="/">
    <Image src={logo} alt="Logo" width={150} height={90} />
  </a>
  <div class="nav">
    <div class="control">
      <input class="menu-btn" type="checkbox" id="menu-button" />
      <label class="menu-icon" for="menu-button">
        <span class="nav-icon"></span>
      </label>
      <div class="menu">
        <ul class="menu-items" aria-label="Main Navigation" id="menu-items">
          <li><a href="#details">Event Details</a></li>
          <li><a href="#about">About</a></li>
          <li><a href="#contact">Contact</a></li>
          <li><Button type="primary" btnText="Sign Up" href="#signup" /></li>
        </ul>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav {
  }

  .menu {
    display: none;
  }

  .menu-items {
    display: flex;
    flex-direction: column-reverse;
    justify-content: flex-start;
    list-style: none;
    line-height: 1.7em;
  }
  .menu-items a:hover {
    font-weight: 600;
  }

  .menu-btn {
    display: none;
  }

  .menu-icon {
    cursor: pointer;
    padding: 20px;
    border: 1px solid blue;
  }

  /* Hamburger */
  .nav-icon {
    display: inline-block;
    position: relative;
    background: var(--primary);
    height: 2px;
    width: 18px;
    transition: background 0.2s ease-out;
  }

  .nav-icon:before,
  .nav-icon:after {
    position: absolute;
    height: 100%;
    width: 100%;
    content: "";
    background: var(--primary);
    transition: all 0.5s ease-out;
  }

  .nav-icon:before {
    top: -5px;
  }

  .nav-icon:after {
    top: 5px;
  }

  /* Menu Button Action*/
  .menu-btn:checked ~ .menu {
    display: inline-block;
  }

  .menu-btn:checked ~ .menu-icon .nav-icon {
    background: white;
  }

  .menu-btn:checked ~ .menu-icon .nav-icon:before {
    transform: rotate(-45deg);
    top: 0;
  }

  .menu-btn:checked ~ .menu-icon .nav-icon:after {
    transform: rotate(45deg);
    top: 0;
  }
</style>
