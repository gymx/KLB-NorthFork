---
const { btnText = "Click Me", href = "#", type = "default" } = Astro.props;
---

<a
  class=`styled ${type}`
  href={href}
  >{btnText}</a
>

<style>
  /* .primary {
    color: var(--primary);
    background-color: var(--accent);
  }

  .default {
    background-color: green;
  } */

  .styled {
    border: 0;
    line-height: 2.5;
    padding: 10px 20px;
    font-size: 1.5rem;
    text-align: center;
    color: #fff;
    text-shadow: 1px 1px 1px #000;
    border-radius: 10px;
    background-color: var(--accent-dark);
    background-image: linear-gradient(
      to top left,
      rgba(0, 0, 0, 0.2),
      rgba(0, 0, 0, 0.2) 30%,
      rgba(0, 0, 0, 0)
    );
    box-shadow:
      inset 2px 2px 3px rgba(255, 255, 255, 0.6),
      inset -2px -2px 3px rgba(0, 0, 0, 0.6);
  }

  .styled.secondary {
    background-color: var(--secondary);
  }

  .styled:hover {
    background-color: var(--accent);
  }
// mde a change

  .styled:active {
    box-shadow:
      inset -2px -2px 3px rgba(255, 255, 255, 0.6),
      inset 2px 2px 3px rgba(0, 0, 0, 0.6);
  }
</style>
